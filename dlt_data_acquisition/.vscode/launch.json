    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run debug pipeline",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/pipeline.py",
            "cwd": "${workspaceFolder}",
            "args": [
                "--debug",
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Run pipeline",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/pipeline.py",
            "cwd": "${workspaceFolder}",
            "args": [
                "--max_items", "50"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal"
        },
    ]
}